# JEEX Plan Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
ENVIRONMENT=development
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://postgres:secure_password@localhost:5220/jeex_plan

# Redis Configuration
REDIS_URL=redis://localhost:5240
REDIS_PASSWORD=redis_password

# Qdrant Vector Database
QDRANT_URL=http://localhost:5230
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION=jeex_plan_documents

# HashiCorp Vault
VAULT_ADDR=http://localhost:5250
VAULT_TOKEN=your-vault-token-here

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# LLM API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
DEFAULT_LLM_MODEL=gpt-4

# Observability
OTLP_ENDPOINT=http://localhost:4318
LOG_LEVEL=INFO

# File Storage
UPLOAD_DIR=./uploads
EXPORT_DIR=./exports

# Multi-tenancy
DEFAULT_TENANT_ID=default
ENABLE_TENANT_ISOLATION=true

# CORS Settings
ALLOWED_ORIGINS=http://localhost:5200,http://localhost:3000,http://localhost:8080