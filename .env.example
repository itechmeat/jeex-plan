# JEEX Plan Environment Configuration Template
# Copy this file to .env and update with your actual values
# NEVER commit .env with real secrets to version control!

# Application Settings
ENVIRONMENT=development
SECRET_KEY=CHANGE_ME_IN_PRODUCTION_TO_STRONG_SECRET
DEBUG=true

# Database Configuration
POSTGRES_DB=jeex_plan
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# Redis Configuration
REDIS_URL=redis://localhost:6379/0  # Format: redis://[:password]@host:port/db
REDIS_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# Qdrant Vector Database
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION=jeex_plan_documents

# HashiCorp Vault
VAULT_ADDR=http://localhost:5250
VAULT_TOKEN=CHANGE_ME_TO_ACTUAL_VAULT_TOKEN
VAULT_DEV_ROOT_TOKEN_ID=CHANGE_ME_TO_VAULT_DEV_TOKEN
USE_VAULT=false  # Set to true in production

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# OAuth2 Settings (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
OAUTH_REDIRECT_URL=http://localhost:5210/auth/callback

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# LLM API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
DEFAULT_LLM_MODEL=gpt-4

# Observability
ENABLE_OBSERVABILITY=false
OTLP_ENDPOINT=http://localhost:4318
LOG_LEVEL=INFO

# File Storage
UPLOAD_DIR=./uploads
EXPORT_DIR=./exports

# Multi-tenancy
DEFAULT_TENANT_ID=default
ENABLE_TENANT_ISOLATION=true

# CORS Settings
ALLOWED_ORIGINS="http://localhost:5200,http://localhost:3000,http://localhost:8080"