# JEEX Plan Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file with real secrets!

# Application Settings
ENVIRONMENT=development
SECRET_KEY=your-secure-jwt-secret-key-here-change-this
DEBUG=false

# Database Configuration - REQUIRED
POSTGRES_DB=jeex_plan
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Redis Configuration - REQUIRED
REDIS_PASSWORD=your_secure_redis_password_here

# Qdrant Vector Database - REQUIRED
QDRANT_API_KEY=your_secure_qdrant_api_key_here
QDRANT_COLLECTION=jeex_plan_documents

# HashiCorp Vault
VAULT_ADDR=http://vault:8200
# VAULT_TOKEN=your-vault-token  # Get from Vault after initialization
USE_VAULT=true  # Enable in production

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# OAuth2 Settings (Optional - configure for production)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret
OAUTH_REDIRECT_URL=http://localhost:5210/auth/callback

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# LLM API Keys - REQUIRED
OPENAI_API_KEY=your-openai-api-key-here
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
DEFAULT_LLM_MODEL=gpt-4

# Observability
ENABLE_OBSERVABILITY=true
OTLP_ENDPOINT=http://otel-collector:4318
LOG_LEVEL=INFO

# File Storage
UPLOAD_DIR=./uploads
EXPORT_DIR=./exports

# Multi-tenancy
DEFAULT_TENANT_ID=default
ENABLE_TENANT_ISOLATION=true

# CORS Settings
ALLOWED_ORIGINS="http://localhost:5200,http://localhost:3000,http://localhost:8080"

# Additional LLM providers (optional)
# GEMINI_API_KEY=your-gemini-api-key-here